<h1>Appointment Info</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Patient Name</th>
      <th>Doctor Name</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= @appointment.appointment_datetime.strftime("%A, %B %d, %Y at %T") %></td>
        <td><%= link_to @appointment.patient.name, patient_path(@patient) %></td>
        <td><%= @appointment.doctor.name %></td>
    </tr>
  </tbody>
</table>
